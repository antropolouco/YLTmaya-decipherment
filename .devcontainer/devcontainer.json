{
	"name": "Maya Hieroglyphs - The History of Decipherment",
	"build": {
		"dockerfile": "../container/Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"mathematic.vscode-latex",
				"James-Yu.latex-workshop",
				"valentjn.vscode-ltex",
				"ms-vscode.powershell"
			],
			"settings": {
				"terminal.integrated.profiles.linux": {
					"PowerShell": {
						"path": "pwsh"
					},
					"bash": {
						"path": "bash",
						"icon": "terminal-bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "PowerShell"
			}
		}
	},
	// Use command below to sync ssh keys with local keys
	//"initializeCommand": "find ~/.ssh/ -type f -exec grep -l 'PRIVATE' {} \\; | xargs ssh-add",
	"containerUser": "ajtzib"
}
